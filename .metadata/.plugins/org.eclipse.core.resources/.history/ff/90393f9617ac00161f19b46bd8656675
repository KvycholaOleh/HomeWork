		//
		// }

		int[][] field = new int[3][3];
		// field[0][0] = 1;
		Scanner sc = new Scanner(System.in);
		while (true) {
			
			
			field = playerInput(field);
				
				
			sysoArr(field);
			if (win(field) == 1 || win(field) == 2) {
				System.out.println("Переміг гравець номер " + win(field));
				break;
			}

			field = compInput(field);

			sysoArr(field);
			if (win(field) == 1 || win(field) == 2) {
				System.out.println("Переміг гравець номер " + win(field));
				break;
			}

			field = playerInput(field);
			
			
			sysoArr(field);
			if (win(field) == 1 || win(field) == 2) {
