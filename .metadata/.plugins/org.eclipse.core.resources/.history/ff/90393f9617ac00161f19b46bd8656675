		// System.out.println("Введіть максимальне число");
		// int max = sc.nextInt();
		// int number = random(min,max);
		// System.out.println("Number ="+number);
		//
		// while(true){
		// System.out.println("Вгадайте число");
		// int isTrue = sc.nextInt();
		// int two=0;
		// int tree=0;
		// if (number==isTrue) {
		// System.out.println("Вірно!");
		// System.exit(0);
		// }
		// two=;
		// if (number-isTrue>two) {
		// System.out.println("Teplo");
		// } else System.out.println("Holodno");
		//
