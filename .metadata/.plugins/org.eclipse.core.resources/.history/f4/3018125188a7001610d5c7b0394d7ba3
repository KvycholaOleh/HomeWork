package additional;

public class DoubleArray {

	public static void main(String[] args) {
		int[][] arr = new int[10][10];
		int count = 1;
		for (int i = 0; i < arr.length; i++) { arr[0][i]=count++; }
		
		for (int i = 1; i < arr.length; i++) { arr[i][9]=count++; }
		
		for (int i = arr.length-1; i >=0; i--) { arr[9][i]=count++-1; }
		
		for (int i = arr.length-1; i >=1; i--) { arr[i][0]=count++-2; }
		
		for (int i = 1; i < arr.length-1; i++) { arr[1][i]=count++-2; }
		
		for (int i = 1; i < arr.length; i++) { arr[i][9]=count++; }
		
		for (int i = 0; i < arr.length; i++) {
			for (int j = 0; j < arr.length; j++) {
				if (arr[i][j]<10) {
					System.out.print(arr[i][j]+"   ");
				} else if (arr[i][j]<100) {
					System.out.print(arr[i][j]+"  ");
				} else System.out.print(arr[i][j]+" ");
				
			}
			System.out.println();
		}

	}

}
