package arrays;

public class Main6 {

	public static void main(String[] args) {
//		6. Створіть масив з 4 випадкових цілих чисел з відрізка [10; 99],
//		виведіть його на екран у рядок. Визначити і вивести на екран
//		повідомлення про те, чи є масив строго зростаючої послідовністю.
		int[] arr = new int[4];
		for (int i = 0; i < arr.length; i++) {
			arr[i] = (int) (Math.random()*(100-10)+10);
		}
		int k=0;
		for (int i = 0; i < arr.length; i++) {
			if (arr[i]<=arr[i+1]) {
				k++;
			}
			if (k==3) {
				System.out.println("Масив строго зростаючої послідовністю");
			} else {
				System.out.println("Масив НЕ зростаючої послідовністю");
				
			}
			
			}
		}
		

	}

}
