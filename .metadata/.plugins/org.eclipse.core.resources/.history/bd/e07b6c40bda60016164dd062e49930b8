package arrays;

public class Main8 {

	public static void main(String[] args) {
		// 8. Створіть масив з 12 випадкових цілих чисел з відрізка [-15;
		// 15]. Визначте який елемент є в цьому масиві максимальним і повідомте
		// індекс його останнього входження в масив.
		int [] arr = new int [12];
		int k = 0;
		for (int i = 0; i < arr.length; i++) {
			arr[i] = (int) (Math.random()*(16+15)-16);
		}
		for (int i = 0; i < arr.length; i++) {
			System.out.print(arr[i]+" ["+i+"] ");
		}
		System.out.println();
		
		for (int i = 0; i < arr.length-1; i++) {
			if (arr[k]<arr[i+1]) {
				k=i;
			}
		}
		System.out.println("Найбільший елемент у масиві має індекс "+k);

	}

}
